# sopher.ai Production Environment Configuration
# Copy to .env.prod and fill in your values

# =============================================================================
# REQUIRED - These must be set before deployment
# =============================================================================

# Your domain name (e.g., sopher.ai, app.example.com)
DOMAIN=localhost

# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=

# Anthropic API Key (required for AI generation)
ANTHROPIC_API_KEY=

# Email for Let's Encrypt SSL certificates
ACME_EMAIL=admin@example.com

# =============================================================================
# OPTIONAL - Have sensible defaults
# =============================================================================

# Database Configuration
POSTGRES_USER=sopherai
POSTGRES_PASSWORD=changeme-use-strong-password
POSTGRES_DB=sopherai

# Redis Configuration
REDIS_PASSWORD=changeme-use-strong-password

# Additional LLM API Keys (optional, for fallback models)
OPENAI_API_KEY=
GOOGLE_API_KEY=

# Model Configuration
PRIMARY_MODEL=claude-sonnet-4-20250514
SECONDARY_MODEL=gpt-4o
MONTHLY_BUDGET_USD=100

# Encryption key for sensitive data - Generate with:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# Logging
LOG_LEVEL=INFO

# Scaling
BACKEND_REPLICAS=1

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme-use-strong-password

# Traefik Dashboard Auth (generate with: htpasswd -nb admin password)
# Format: user:password_hash
TRAEFIK_AUTH=admin:$$apr1$$xyz$$placeholder

# =============================================================================
# COMPUTED - Usually don't need to change
# =============================================================================

NEXT_PUBLIC_BACKEND_URL=https://${DOMAIN}/api
CORS_ORIGINS=https://${DOMAIN}
